#!/bin/bash

# Get list of staged files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACMR)

# Check if there are any backend files changed
BACKEND_FILES=$(echo "$STAGED_FILES" | grep "^backend/" || true)

if [ -n "$BACKEND_FILES" ]; then
    echo "üîç Running Maven verify on changed backend files..."
    # Change to backend directory and run Maven verify
    cd backend
    mvn clean verify
    MVN_RESULT=$?
    cd ..
    
    if [ $MVN_RESULT -ne 0 ]; then
        echo "‚ùå Maven verify failed. Please fix the issues and try committing again."
        exit 1
    fi
fi

# Check if there are any frontend files changed
FRONTEND_FILES=$(echo "$STAGED_FILES" | grep "^frontend/" || true)

if [ -n "$FRONTEND_FILES" ]; then
    echo "üîç Running frontend checks..."
    cd frontend
    yarn lint && yarn test:ci
    FRONTEND_RESULT=$?
    cd ..
    
    if [ $FRONTEND_RESULT -ne 0 ]; then
        echo "‚ùå Frontend checks failed. Please fix the issues and try committing again."
        exit 1
    fi
fi

echo "‚úÖ All checks passed!"
exit 0